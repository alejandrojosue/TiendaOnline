<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/round_edittext_bg"
    android:orientation="vertical"
    android:padding="20px"
    android:layout_margin="20dp">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/img"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/img"
            android:layout_width="150dp"
            android:layout_height="150dp"
            tools:background="@drawable/button_shape" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/img"
            app:layout_constraintTop_toTopOf="parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tvName"
                android:layout_width="200dp"
                android:layout_height="29dp"
                android:ellipsize="end"
                android:fontFamily="@font/poppinssemibold"
                android:maxLines="1"
                android:paddingLeft="20px"
                android:textSize="24dp"
                android:textStyle="bold"
                tools:ignore="MissingConstraints,TextSizeCheck"
                tools:text="NAME" />
            <TextView
                android:id="@+id/tvPrice"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginHorizontal="20px"
                android:fontFamily="@font/poppinsregular"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_marginTop="20px"
                tools:ignore="MissingConstraints,TextSizeCheck"
                tools:text="L. 2000.00" />
            <LinearLayout
                android:id="@+id/linearlayout1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginHorizontal="20px"
                android:layout_marginTop="10px">
                <TextView
                    android:id="@+id/tvSKU"
                    android:layout_width="wrap_content"
                    android:fontFamily="@font/poppinsregular"
                    android:textColor="@color/gray"
                    android:textStyle="bold"
                    android:visibility="gone"
                    android:drawableLeft="@drawable/baseline_filter_center_focus_24"
                    android:layout_height="22dp"
                    android:textSize="16dp"
                    tools:text="BE012341"
                    tools:ignore="MissingConstraints" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linearlayout2"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                tools:ignore="MissingConstraints">
                <LinearLayout
                    android:id="@+id/layout3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/round_edittext_bg"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10px"
                    android:paddingHorizontal="20px">

                    <TextView
                        android:id="@+id/btnDecrement"
                        android:layout_width="15pt"
                        android:layout_height="match_parent"
                        android:background="@drawable/baseline_remove_24" />

                    <EditText
                        android:id="@+id/edtQuantity"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:maxLines="1"
                        android:text="1"
                        android:textAlignment="center"
                        android:textSize="20sp"
                        tools:ignore="TouchTargetSizeCheck" />

                    <TextView
                        android:id="@+id/btnIncrement"
                        android:layout_width="20pt"
                        android:layout_height="match_parent"
                        android:background="@drawable/baseline_add_24" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/btnAnadir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="20px"
        android:layout_gravity="center"
        android:text="AÃ±adir al carrito"
        tools:ignore="TouchTargetSizeCheck" />

</LinearLayout>